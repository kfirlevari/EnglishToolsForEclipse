<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="English Tools"
            id="EnglishTools.commands.category">
      </category>
      <command
            name="Thesaurus selection"
            categoryId="EnglishTools.commands.category"
            id="EnglishTools.commands.thesaurusThis">
      </command>
      <command
        name="Dictionary selection"
        categoryId="EnglishTools.commands.category"
        id="EnglishTools.commands.dictionaryThis">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="EnglishTools.commands.thesaurusThis"
            class="englishtools.handlers.ThesaurusHandler">
      </handler>
      <handler
    		commandId="EnglishTools.commands.dictionaryThis"
    		class="englishtools.handlers.DictionaryHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="EnglishTools.commands.thesaurusThis"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="EnglishTools.commands.dictionaryThis"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+5"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="English Tools"
               mnemonic="M"
               id="EnglishTools.menus.mainMenu">
            <command
                  commandId="EnglishTools.commands.thesaurusThis"
                  icon="icons/t.jpg"
                  id="EnglishTools.menus.thesaurusThis"
                  mnemonic="T">
            </command>
            <command
                  commandId="EnglishTools.commands.dictionaryThis"
                  icon="icons/d.jpg"
                  id="EnglishTools.menus.dictionaryThis"
                  mnemonic="D">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="EnglishTools.toolbars.mainToolbar">
            <command
                  commandId="EnglishTools.commands.thesaurusThis"
                  icon="icons/t.jpg"
                  tooltip="Thesaurus selection"
                  id="EnglishTools.toolbars.thesaurusThis">
            </command>
            <command
                  commandId="EnglishTools.commands.dictionaryThis"
                  icon="icons/d.jpg"
                  tooltip="Dictionary selection"
                  id="EnglishTools.toolbars.dictionaryThis">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
